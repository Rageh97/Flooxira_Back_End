# Database
DATABASE_URL=sqlite:./data/dev.db
SQLITE_RESET=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Facebook App Configuration
FB_APP_ID=your_facebook_app_id
FB_APP_SECRET=your_facebook_app_secret
FB_REDIRECT_URI=http://localhost:4000/auth/callback

# TikTok App Configuration
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_REDIRECT_URI=http://localhost:3000/settings?platform=tiktok

# Salla App Configuration
SALLA_CLIENT_ID=your_salla_client_id
SALLA_CLIENT_SECRET=your_salla_client_secret
SALLA_OAUTH_REDIRECT=http://localhost:4000/auth/salla/callback
SALLA_REDIRECT_URI=http://localhost:3000/settings?platform=salla
SALLA_SCOPES=offline_access read_products read_orders

# LinkedIn App Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:4000/auth/linkedin/callback

# Pinterest App Configuration
PINTEREST_APP_ID=your_pinterest_app_id
PINTEREST_APP_SECRET=your_pinterest_app_secret
PINTEREST_REDIRECT_URI=http://localhost:4000/auth/pinterest/callback

# Pinterest Sandbox (set when app has Trial access)
# If enabled, backend will call https://api-sandbox.pinterest.com instead of production
PINTEREST_USE_SANDBOX=0
# Or override base URL explicitly
# PINTEREST_API_BASE=

# Optional: test access token (overrides stored token for debugging)
# PINTEREST_TEST_ACCESS_TOKEN=

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Server Configuration
PORT=4000
NODE_ENV=development

# Telegram (GramJS)
TELEGRAM_API_ID=0
TELEGRAM_API_HASH=

